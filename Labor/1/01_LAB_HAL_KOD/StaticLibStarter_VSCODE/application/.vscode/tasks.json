{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\Program Files\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-g",
				"${file}",
				"-I..\\library",
				"-L..\\library",
				"-lmymathfuncs"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		}
	]
}
