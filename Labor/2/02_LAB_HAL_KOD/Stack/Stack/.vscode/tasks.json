{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "windows" : {
                "command": "C:\\Program Files\\mingw64\\bin\\gcc.exe",
			"args": [
				"-g",
				"-Wall",
				"*.c",
				"-o",
				"prog.exe"
			],
            },
            "linux" : {
                "command": "gcc -g -Wall *.c -o prog"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
